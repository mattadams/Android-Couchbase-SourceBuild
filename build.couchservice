#!/bin/bash -x
#

source scripts/env

# Make sure we have a valid environment before we continue
./scripts/checkenv
if [[ $? -ne 0 ]]; then
    exit 1
fi

if [ -z "$1" ]; then
    echo "Give me a release number bub!"
    exit 1
fi

if [ -z "$2" ]; then
    echo "Give me a release number for OTP/Erlang bub!"
    exit 1
fi

cd $COUCHBASE_SERVICE_HOME

touch local.properties

# build our jni code
ant -v -Dsdk.dir=$ANDROID_SDK_ROOT -Dndk.dir=$ANDROID_NDK_ROOT jni

# build couchbase.jar
ant -v -Dsdk.dir=$ANDROID_SDK_ROOT -Dndk.dir=$ANDROID_NDK_ROOT -Dextensible.libs.classpath=$ERL_HOME/lib/jinterface/priv/ -Dversion=$1 couchbase-jar

# build couchbase scripts
ant -v -Dsdk.dir=$ANDROID_SDK_ROOT -Dversion=$1 -Dotp.version=$2 couchbase-script
